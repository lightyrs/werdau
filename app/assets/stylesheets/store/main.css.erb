@charset "utf-8";

html, body {
  height:100%;
}

body {
  font-family: segoe ui, arial, tahoma, sans-serif;
  font-size: 13px;
  line-height: 1.3;
  /*color: #575757;*/
  color: black;
  background: url(<%= image_path 'store/bg.png' %>) top repeat-x;
} 

a {color:#D91F24;}
a:hover {text-decoration:none;}
a:focus {outline: 0;}

nav ul {
  margin: 0;
  padding: 0;
}

h1 {
  font-size: 35px;
  color: #b9bdc8;
  text-transform: uppercase;
  font-weight: normal;
}

h1.notice {
  text-transform: none;
}

h2 {
  font-size: 21px;
  color: #d82022;
  font-weight: normal;
  margin: 20px 0 12px 0;
}

h6 {
  font-size: 13px;
  margin: 12px 0 7px 0;
}

.container {
  width: 1230px;
  position:relative;
  min-width:1150px;
  background: url(<%= image_path 'store/bg2.png' %>) no-repeat right bottom;
}

.top-nav ul {
  background: url(<%= image_path 'store/line.png' %>) no-repeat 10px;
  padding-left: 14px;

  margin: 16px 0 16px 227px;
}

.top-nav li {
  display: inline-block;
  margin: 0 11px;
  font-size: 11px;
}

.top-nav li a {
  color: #565656;
  font-weight: bold;
  text-transform: uppercase;
  text-decoration: none;
}

.top-nav li a:hover {
  text-decoration: underline;
}

.login,
.logout {
  float: right;
  margin-top: -36px;
  width: 55px;
  height: 24px;

  font-size: 11px;
  line-height: 11px;
}

.login {
  background: url(<%= image_path 'store/key.png' %>) no-repeat left 2px;
  padding-left: 17px;
}

.logout {
  padding-top: 6px;
  width: auto;
  height: 11px;
}


header {
  background: url(<%= image_path 'store/headbg.png' %>) top repeat-x;
  height: 155px;
  position: relative;
  color: #fff;
  font-size: 12px;
  clear: both;
  margin-bottom: 0;
}


header .logo {
  position: absolute;
  left: 36px;
  top: 28px;

  text-align: center;
}

header .logo img {
  display: block;
}

header .logo a {
  color: #fff;
  text-transform: uppercase;
  text-decoration: none;
  font-size: 10px;
  letter-spacing: 0.3em;
}


header .search {
  position: absolute;
  top: 28px;
  left: 235px;
}

header .search input[type=search] {
  -webkit-border-radius: 4px;  
  -moz-border-radius: 4px;  
  border-radius: 4px;  

  border: 1px solid #000;
  width: 620px;
  height: 28px;
  background: #fff;

  color: #4a6d83;
  font-size: 17px;
  padding-left: 5px;
}

header .search input[type=submit] {
  width: 56px;
  height: 31px;
  line-height: 31px;
  margin-left: 2px;

  color: #fff;
  font-size: 11px;

  text-transform: uppercase;
  text-decoration: none;
  text-align: center;

  background: url(<%= image_path 'store/search.png' %>) no-repeat;
  border: 0;
}


header .contacts {
  position: absolute;
  bottom: 0px;
  left: 205px;
  height: 78px;
  background: url(<%= image_path 'store/phone.png' %>) no-repeat bottom left;
  padding-left: 30px;
}

header .contacts .phone {
  font-size: 30px;
}

header .contacts .phone span {
  font-size: 20px;
}

header .contacts .callback {
  font-size: 13px;
  color: #fff;
  margin-left: 40px;
  text-transform: uppercase;
}


header .notice {
  position: absolute;
  left: 607px;
  background: url(<%= image_path 'store/notice.png' %>) no-repeat;
  width: 214px;
  height: 58px;
  top: 67px;
  font-size: 18px;
  padding: 15px 0 0 35px;
}

header .notice span {
  display: block;
}

header .notice span.ship {
  font-size: 14px;
}


header .cart {
  position: absolute;
  left: 971px;
  top: 25px;  
}

header .cart h2 {
  font-weight: normal;
  font-size: 29px;  
  margin-bottom: 6px;
  color: white;
}

header .cart .cont {
  background: url(<%= image_path 'store/dash.png' %>) repeat-y left;  
  min-height: 69px;
  padding-left: 15px;
}

header .cart .icon {
  position: absolute;
  width: 85px;
  height: 60px;
  background: url(<%= image_path 'store/cart.png' %>) no-repeat bottom left;
  left: 110px;
  top: -5px;
}

header .cart .icon.act{
  background: url(<%= image_path 'store/cart2.png' %>) no-repeat bottom left;
}


.photoline {
  height: 84px;
  background: url(<%= image_path 'store/tbar.jpg' %>) repeat-x;
}


#product-categories {
  width: 1250px;
  height: 132px;
  display: block;
  position: relative;
}

#product-categories li {
  display: block;
  float: left;
  font-size: 10px;
  text-transform: uppercase;
  text-decoration: none;
  color: #505a59;
  padding-top: 15px;
  padding-bottom: 15px;
  margin: 0 12px 0 60px;
  min-height: 120px;
  word-wrap: break-word;
  overflow: hidden;
}

#product-categories li.selected {
  border-left: 2px solid black;
  border-right: 2px solid black;
  border-top: 2px solid black;
  -webkit-border-radius: 4px; -moz-border-radius: 4px; border-radius: 4px;  
  padding-top: 13px;
  margin-left: 58px;
  margin-right: 10px;
  z-index: 2;
}

#product-categories a:hover {
  color: #d82123;
  text-decoration: underline;
}

#product-categories a img {
  display: block;
  margin-left: 16px;
}

#product-categories a span {
  display: block;
  width: 96px;
  text-align: center;
}

#product-categories .selected .level2 {
  display: block;
}

#product-categories .border-fix {
  display: none;
  position: absolute;
  top: 120px;
  z-index: 2;
  width: 96px;
  height: 2px;
  background-color: white;
}

#product-categories .selected .border-fix {
  display: block;
}

#product-categories .level2 {
  display: none;
  width: 1100px;
  position: absolute;
  padding: 10px 10px;
  left: 30px;
  top: 120px;
  z-index: 1;
  background: #fff;
  border: 2px solid black;

  -webkit-border-radius: 4px; -moz-border-radius: 4px; border-radius: 4px;  
}

#product-categories .level2 li {
  width: 200px;
  margin: 0;
  padding-left: 70px;
  float: left;
  position: relative;
  min-height: 55px;
}

#product-categories .level2 img {
  position: absolute;
  margin-left: -70px;
}

#product-categories .level2 li a {
  font-size: 14px;
  color: blue;
}

#product-categories .level3 li {
  min-height: 0;
  padding: 0;
  padding-bottom: 5px;
}

#product-categories .level3 li a {
  color: black;
  font-size: 10px;
}

.mainact {
  clear: both;
}

.mainact .advertisement {
  padding: 30px 40px;
  width: 880px;
  height: 218px;
  float: left;
}

.mainact nav.additional {
  text-align: left;
  padding: 30px 0 0 0;
  margin-left: 950px;
  height: 220px;
  position: relative;
}

.mainact nav.additional a {
  border-bottom: 1px dashed #d82123;
  font-size: 19px;
  text-decoration: none;
  display: inline-block;
  margin-bottom: 6px;
  line-height: 18px;
}

.mainact nav.additional a:hover {
  color: #f8dbd3;
}

.mainact nav.additional a.callcenter {
  width: 186px;
  height: 68px;
  display: block;
  background: url(<%= image_path 'store/callme.png' %>) no-repeat;
  position: absolute;
  bottom: -12px;
  border: none;
}

.mainact nav.additional a.callcenter:hover {
  background: url(<%= image_path 'store/callmeon.png' %>) no-repeat;  
  padding: 0px;
}

.mainact .callcenter span {
  display: none;
}

.popup .personal-data input:focus {  
    -webkit-box-shadow: 0px 0px 5px #007eff;  
    -moz-box-shadow: 0px 0px 5px #007eff;  
    box-shadow: 0px 0px 5px #007eff;  
} 

#content {
  padding-left: 40px;
  overflow: hidden;
  width: 880px;
  margin-right: 300px;
}

#content .cart {
  width: 880px;
}

#breadcrumbs {
  padding-top: 10px;
  padding-left: 40px;
}

.text-page {
  float: left;
  padding: 10px 0 40px 40px;
  overflow: hidden;
  width: 882px;
  line-height: 1.3;
}

.col-1 {
  float: left;
}

.col-1 {
  width: 575px;
  overflow: hidden;
  border-right: 1px dashed #dddce1;
}

.col-2 {
  background: #fcfcfc;
  border: 1px dashed #dddce1;
  padding: 22px 22px 0px 22px;
  border-bottom-width: 0px;

  width: 260px;
  margin-left: 575px;
  position: relative;
  overflow: show;
}

.col-2 .news {
  min-height: 560px;
}

#content .index {
  border-right: 1px dashed #dddce1;
}

#about {
  clear: left;
  position: relative;
  border-right: 1px solid #edeef2;
  width: 904px;
  margin-left: -40px;
}

#about .textpage {
  background: #efefef;
  border-right: 5px solid #fff;
  border-top: 5px solid #fff;
  padding: 25px 30px 25px 40px;  
  font-size: 13px;
}

#about .corner {
  background: url(<%= image_path 'store/corner.png' %>) no-repeat right top; 
  position: absolute;
  z-index: 100;
  width: 50px;
  height: 70px;
  top: -15px;
  right: -5px;
}

#about .textpage h3 {
  font-weight: normal;
  font-size: 18px;
  color: #d8201e;
  margin: 0 0 20px 0;
}

#about .textpage a {
  color: #d8201e;
}

#footer {
  height: 53px;
  background: #38505c;
  padding: 25px 25px 60px 25px;
  color: #fff;
  position: relative;
  clear: both;
}

#footer .bmenu {
  position: relative;
  float: right;
  top: -45px;
  color: #d2d2dc;
  text-align: right;
}

#footer .bmenu .counters {
  padding: 10px 0px 0px 0px;
}

#footer .bmenu a {
  color: #fff;
}

#footer .copy {
  background: url(<%= image_path 'store/logo2.png' %>) no-repeat left;
  padding-left: 71px;
}

.bpanel {
  position: fixed;
  bottom: 0;
  z-index: 1000;
  width: 100%;
}

.bpanel > ul {
  margin: 0;
  padding-top: 18px;
  padding-left: 10px;
  width: 100%;
  height: 30px;
  background: url(<%= image_path 'store/bpanel.png' %>) repeat-x top;
  list-style-type: none;
}

.bpanel > ul > li {
  display: inline-block;
  float: left;
}

aside#sidebar {
  float: right;
  width: 270px;
  margin-left: 30px;
}

h2.section {
  border-bottom: 3px solid #D82022;
  margin-bottom: 20px;
  text-align: right;
  color: #575757;
  font-size: 13px;
  font-weight: normal;
  text-transform: uppercase;
}

h2.section span {
  display: inline-block;
  height: 26px;
  line-height: 26px;
}

h2.section > span {
  padding-right: 10px;
  background: url(<%= image_path('store/tab-right.png') %>) top right no-repeat;
}

h2.section > span > span {
  padding-left: 10px;
  background: url(<%= image_path 'store/tab-left.png' %>) top left no-repeat;
}

ul.pager {
  list-style-type: none;
  text-align: center;
}

ul.pager li {
  display: inline;
}

.pager a {
  display: inline-block;
  margin: 0 5px;
  text-decoration: none;
  color: #565656;  
}      

.pager a:hover {
  text-decoration: underline;
}

.pager a.prev,
.pager a.next {
  width: 13px;
  height: 13px;
  
  position: relative;
  bottom: -1px;
  margin: 0;
}

.pager a.prev { background: url(<%= image_path 'store/arrowl.png' %>) no-repeat; }
.pager a.next { background: url(<%= image_path 'store/arrowr.png' %>) no-repeat; }

